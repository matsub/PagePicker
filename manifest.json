{
    "manifest_version": 2,
    "author": "matsub",

    "name": "__MSG_extName__",
    "short_name": "PickImg",
    "description": "__MSG_appDescription__",
    "version": "1.1.2",
    "default_locale": "en",
    "icons": { "128": "images/icon128.png" },

    "browser_action": {
        "default_icon": { "32": "images/icon32_active.png" },
        "default_title": "Click to Pick"
    },
    "background": {
        "persistent": false,
        "scripts": ["lib/PickImg.js"]
    },
    "options_ui": {
        "chrome_style": true,
        "page": "preferences.html"
    },

    "permissions": [
        "storage",
        "downloads",
        "http://*/*",
        "https://*/*",
        "tabs"
    ]
}
